{
  "eslint.workingDirectories": ["./"], // Ensure ESLint runs in the project root
  "eslint.options": {
    "overrideConfigFile": "eslint.config.js" // Specify your ESLint configuration file
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": false // Disable default formatting if using ESLint/Prettier
}
